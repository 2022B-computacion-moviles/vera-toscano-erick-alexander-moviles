<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EstudiantesView">

    <ListView
        android:id="@+id/lv_estudiantes"
        android:layout_width="382dp"
        android:layout_height="480dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <Button
        android:id="@+id/btn_crear_estudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Crear Estudiante"
        app:layout_constraintEnd_toEndOf="@+id/lv_estudiantes"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/lv_estudiantes"
        app:layout_constraintTop_toBottomOf="@+id/lv_estudiantes" />

    <Spinner
        android:id="@+id/spinnerEstudiantes"
        android:layout_width="229dp"
        android:layout_height="39dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_estudiante"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_estudiante"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_estudiante" />
</androidx.constraintlayout.widget.ConstraintLayout>