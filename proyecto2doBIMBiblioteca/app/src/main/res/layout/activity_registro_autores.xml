<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegistroAdministrador">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="284dp"
        android:layout_height="70dp"
        android:fontFamily="@font/roboto_bold"
        android:text="PANEL DE ADMINISTRADOR"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.006" />


    <Button
        android:id="@+id/btn_guardarAutor"
        android:layout_width="287dp"
        android:layout_height="49dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/black"
        android:text="Guardar Autor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_nacionalidadAutor" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="231dp"
        android:layout_height="33dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Registro de libros"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Llena los siguientes campos"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Nombres del autor"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/input_apellidosAutor"
        android:layout_width="304dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boxradius"
        android:hint="   Ingresa los apellidos del autor"
        android:textColor="@color/black"
        android:textColorHint="#6F6F6F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/input_nombresAutor"
        android:layout_width="304dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boxradius"
        android:hint="   Ingrese los nombres del autor"
        android:textColor="@color/black"
        android:textColorHint="#6F6F6F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Nacionalidad"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/input_apellidosAutor"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="@+id/input_apellidosAutor"
        app:layout_constraintTop_toBottomOf="@+id/input_apellidosAutor" />

    <EditText
        android:id="@+id/input_nacionalidadAutor"
        android:layout_width="304dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boxradius"
        android:hint="   Ingresa la nacionalidad del autor"
        android:textColor="@color/black"
        android:textColorHint="#6F6F6F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView10"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Apellidos del autor"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/input_nombresAutor"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintStart_toStartOf="@+id/input_nombresAutor"
        app:layout_constraintTop_toBottomOf="@+id/input_nombresAutor" />

</androidx.constraintlayout.widget.ConstraintLayout>